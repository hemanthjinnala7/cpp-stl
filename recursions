//printing 1to n
#include <iostream>
using namespace std;

void print(int i,int num){
    if (i>num) return; // base case
    cout<<i<<" ";
    print(i+1,num);}// recursive call
int main(){
    int a;
    cin>>a;
    print(1,a);//function call
    
}



=======================================================================================================================================================================


PRINTING N T0 1
#include <iostream>
using namespace std;

void print(int i){
    if (i<=0) return; // base case
    cout<<i<<" ";
    print(i-1);}// recursive call
int main(){
    int a;
    cin>>a;
    print(a);//function call
    
}
==============================================================================================================================================================================

COUNTNG DIGITS IN A NUMBER


// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
//counting digits in a digit
int cnt(int x){
    if (x==0) return 0;
    else return 1+cnt(x/10);
    
}
int main() {
    cout<<cnt(1234567);

    return 0;
}
=========================================================================================================================================================================
// Online C++ compiler to run C++ program online
#include <iostream>
//FACTORIal BACK TRACKING
using namespace std;
int fact(int i)
{
    if (i>1) //base case
    {
        return i*fact(i-1); //recursion call
    }
    else
    {
        return 1;
    }
}
int main(){
    cout<<fact(5);//function call
}

